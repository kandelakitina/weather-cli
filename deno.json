{
	"name": "My Deno app",
	"exports": "./weather.ts",
	"main": "weather.ts",
	"bin": {
		"weather": "weather.ts"
	},
	"version": "0.0.1",
	"imports": {
		"@std/cli": "jsr:@std/cli@^1.0.25",
		"@std/fmt": "jsr:@std/fmt@^1.0.8",
		"@std/fs": "jsr:@std/fs@^1.0.21",
		"@std/path": "jsr:@std/path@^1.1.4",
		"@std/text": "jsr:@std/text@^1.0.16"
	},
	"permissions": {
		"default": {
			"read": [".", "$HOME/weather-data.json"],
			"write": ["$HOME/weather-data.json"],
			"sys": ["homedir", "osRelease"],
			"net": ["geocoding-api.open-meteo.com", "api.openweathermap.org"]
		}
	}
}
